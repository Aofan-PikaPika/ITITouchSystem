                    <DockPanel LastChildFill="True" Background="#FFD61700">
                        <TextBlock Style="{StaticResource ResourceKey=leaderTableTxtblockStyle}" >历任领导</TextBlock>
                    </DockPanel>
                    <DockPanel LastChildFill="True"  Background="#FFD61700">
                        <TextBlock Style="{StaticResource ResourceKey=leaderTableTxtblockStyle}">职务</TextBlock>
                    </DockPanel>
                    <DockPanel LastChildFill="True" Background="#FFD61700">
