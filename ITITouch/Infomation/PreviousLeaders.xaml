                    </StackPanel>
                    <DockPanel LastChildFill="True"  Background="#FFEE8F6A">
                        <TextBlock  Style="{StaticResource ResourceKey=leaderTableTxtblockStyle}">党委书记</TextBlock>
                    </DockPanel>
                    <DockPanel LastChildFill="True"  Background="#FFF79E7C">
